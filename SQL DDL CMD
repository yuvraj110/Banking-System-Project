CREATE DATABASE sq_account;
CREATE DATABASE sql_user;
CREATE DATABASE sql_transaction;

USE sql_user;

-- Customer Table
CREATE TABLE Customer (
    CustomerID INT PRIMARY KEY,
    Name VARCHAR(100) NOT NULL,
    Phone VARCHAR(15),
    Email VARCHAR(100)
);

-- Employee Table
CREATE TABLE Employee (
    EmployeeID INT PRIMARY KEY AUTO_INCREMENT,
    Name VARCHAR(100) NOT NULL,
    Salary DECIMAL(15,2),
    DateOpened DATE
);

USE sq_account;

-- Account Table
CREATE TABLE Account (
    AccountNumber INT PRIMARY KEY,
    CustomerID INT NOT NULL,
    Balance DECIMAL(15,2) NOT NULL,
    FOREIGN KEY (CustomerID) REFERENCES sql_user.Customer(CustomerID)
);

-- Branch Table
CREATE TABLE Branch (
    BranchID INT PRIMARY KEY,
    BranchName VARCHAR(100) NOT NULL,
    BranchAddr VARCHAR(200),
    BranchPhone VARCHAR(15)
);

-- Loan Table
CREATE TABLE Loan (
    LoanID INT PRIMARY KEY,
    LoanType VARCHAR(50),
    AccountNumber INT,
    StartDate DATE,
    EndDate DATE,
    Courtome VARCHAR(100),
    FOREIGN KEY (AccountNumber) REFERENCES Account(AccountNumber)
);

USE sql_transaction;

-- Transaction Table
CREATE TABLE Transaction (
    TransactionID INT PRIMARY KEY,
    TransactionType VARCHAR(50),
    Amount DECIMAL(15,2),
    TransactionDate DATE,
    LoanID INT,
    FOREIGN KEY (LoanID) REFERENCES sq_account.Loan(LoanID)
);


